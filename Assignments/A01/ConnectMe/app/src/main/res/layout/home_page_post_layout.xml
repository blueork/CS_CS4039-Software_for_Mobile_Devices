<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"
                android:background="#bfbfbf" />
            <androidx.cardview.widget.CardView
                android:id="@+id/profile_pic_holder"
                android:layout_marginTop="14dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="@color/brown"
                app:cardCornerRadius="25dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:id="@+id/profile_pic"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="Post Profile Pic"
                        android:scaleType="centerCrop"
                        android:src="@drawable/connect_me_logo"
                        tools:ignore="HardcodedText" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@id/profile_pic_holder"
                android:layout_marginTop="20dp"
                android:text="Zubair Adnan"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:src="@drawable/three_dots"
                android:contentDescription="temp"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/post_picture"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="6dp"
                android:layout_below="@id/profile_pic_holder"
                android:background="@color/white"
                android:src="@drawable/post_pic_1"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/like_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/post_picture"
                android:layout_marginStart="20dp"
                android:src="@drawable/unfilled_heart"
                android:background="@color/white"
                android:contentDescription="temp"
                tools:ignore="HardcodedText" />
            <ImageButton
                android:id="@+id/comment_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/post_picture"
                android:layout_toEndOf="@id/like_button"
                android:layout_marginStart="20dp"
                android:src="@drawable/message_text"
                android:background="@color/white"
                android:contentDescription="temp"
                tools:ignore="HardcodedText" />
            <ImageButton
                android:id="@+id/share_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/post_picture"
                android:layout_toEndOf="@id/comment_button"
                android:layout_marginStart="20dp"
                android:src="@drawable/telegram"
                android:background="@color/white"
                android:contentDescription="temp"
                tools:ignore="HardcodedText" />
            <ImageButton
                android:id="@+id/bookmark_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/post_picture"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/bookmark"
                android:background="@color/white"
                android:contentDescription="temp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/like_button"
                android:background="#bfbfbf" />

            <TextView
                android:id="@+id/post_description"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emily James Had a great hike acroos this beautiful landscape"
                android:layout_below="@id/share_button"
                android:padding="10dp"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>