                android:src="@drawable/circlegyey"
                android:padding="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_margin="1dp"
            android:orientation="vertical"
            android:layout_weight=".2">
